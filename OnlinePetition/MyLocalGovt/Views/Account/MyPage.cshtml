@model MyLocalGovt.Models.PetitionModel
@{
    ViewBag.Title = "MyPage";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

@foreach (var Mine in Model.MyPetitionsList)
                    {

                       




                            <div class="box5">

                                <h5 style="text-transform:uppercase; font-family:'Adobe Gothic Std';">@Html.DisplayFor(x => Mine.Title) </h5> <span><h6><strong>by:(Gregory White) </strong> @Mine.PetDate</h6> </span>
                                <div class="">
                                    <div class="">
